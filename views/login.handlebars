<div class="col-md-4 col-md-offset-4">
    <h2>Login</h2>
    <div class="form-group">
        <form id="login-form" method="POST">
 
            <label for="emailInput">Email</label>
            <input class="form-control" type="text" id="emailInput" name="emailInput" placeholder="Email" required><br>

            <label for="passwordInput">Password</label>
            <input class="form-control" type="password" id="passwordInput" name="passwordInput" placeholder="Password" required><br>
            <input type="submit" value="Login" class="btn btn-success">

        </form>
    </div>
    <div class="mssg bg-danger">
        <span id="check"></span>
    </div>
    <p id="error"> {{error}} </p>

    <div class="register">
        <span>Create a new Account? <a href="/register"><b style="color:#0066d5;">Register here</b></a></span>
    </div>
    
</div>


<script type="text/javascript">
    $(document).ready(function(){
        $("#login-form").submit(function(event) {
            event.preventDefault(); 
            let emailInput = document.getElementById('emailInput');
            let email = emailInput.value;
            let emailRegex = /^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$/;
            
            let password = $('#passwordInput').val();

            if (emailRegex.test(email) && /^\S*$/.test(password) &&  /(?=.*[A-Z])(?=.*\d)(?=.*\W)/.test(password)) {
                $("#error").text('');
                $.ajax({
                    type: 'POST',
                    url: '/users/login',
                    data: $('#login-form').serialize(),
                    dataType: "json",
                }).always( function (data) {
                    if(data.status == 200) {
                        window.location.href = '/';
                    } else {
                        $('#login-form')[0].reset();
                    }
                });
            } else {
                $("#error").text("Invalid Email Address or Pwd");
            }
        });
    });
</script>